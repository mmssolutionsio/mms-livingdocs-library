            "type": "select",
            "options": [
              {
                "caption": "–"
              },
              {
                "caption": "Secondary",
                "value": "mms-alert--secondary"
              },
              {
                "caption": "Success",
                "value": "mms-alert--success"
              },
              {
                "caption": "Warning",
                "value": "mms-alert--warning"
              },
              {
                "caption": "Danger",
                "value": "mms-alert--danger"
              }
            ]
