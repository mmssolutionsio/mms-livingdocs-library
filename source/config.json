    "componentProperties": {
        "img-position": {
            "label": "Image Position",
            "type": "select",
            "options": [
              {
                "caption": "–"
              },
              {
                "caption": "Centered",
                "value": "img-centered"
              },
              {
                "caption": "Right",
                "value": "img-right"
              }
            ]
        },
        "img-size": {
            "label": "Image Size",
            "type": "select",
            "options": [
              {
                "caption": "Full Width (default)"
              },
              {
                "caption": "1/2 Width",
                "value": "img-1-2"
              },
              {
                "caption": "1/3 Width",
                "value": "img-1-3"
              },
              {
                "caption": "1/4 Width",
                "value": "img-1-4"
              }
            ]
