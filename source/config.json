              {
                "caption": "1/2 Width",
                "value": "paragraph-1-2"
              },
              {
                "caption": "1/3 Width",
                "value": "paragraph-1-3"
              },
              {
                "caption": "1/4 Width",
                "value": "paragraph-1-4"
              }
            ]
