      "cover": {
        "label": "Cover",
        "ratio": "210x205"
      },
      "a4": {
        "label": "A4",
        "ratio": "210x297"
      },
      "3:2": {
        "label": "3:2",
        "ratio": "3x2"
      },
      "1:1": {
        "label": "1:1",
        "ratio": "1x1"
      },
      "4:3": {
        "label": "4:3",
        "ratio": "4x3"
      },
      "16:9": {
        "label": "16:9",
        "ratio": "16x9"
      }
