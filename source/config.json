        {
            "label": "Text",
            "components": [
                "paragraph",
                "code",
                "horizontal-line",
                "alert",
                "pagebreak"
            ]
        },
        {
            "label": "Media",
            "components": [
                "img",
                "video"
            ]
        },
        {
            "label": "List",
            "components": [
                "ordered-list-group",
                "unordered-list-group",
                "list-item"
            ]
        },
        {
          "label": "Miscellaneous",
          "components": [
            "signature-container",
            "signature-item",
            "quote-with-portrait",
            "quote"
          ]
        }    
